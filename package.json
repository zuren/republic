{
  "name": "republic",
  "version": "0.1.2",
  "description": "Productive Javascript",
  "main": "lib/index.js",
  "bin": {
    "republic": "lib/cli/index.js",
    "republic-dev": "lib/cli/dev.js"
  },
  "scripts": {
    "build": "babel src --out-dir lib",
    "prepublish": "npm run build",
    "lint": "eslint src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukemorton/republic.git"
  },
  "author": "Luke Morton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lukemorton/republic/issues"
  },
  "homepage": "https://github.com/lukemorton/republic#readme",
  "dependencies": {
    "express": "^4.13.4",
    "history": "^1.17.0",
    "lodash": "^4.1.0",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-dom-stream": "^0.4.1",
    "react-redux": "^4.4.0",
    "react-router": "^1.0.3",
    "redux": "^3.0.5",
    "redux-thunk": "^1.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "bulkify": "^1.1.1",
    "eslint": "^1.10.3",
    "eslint-config-standard": "^4.4.0",
    "eslint-config-standard-react": "^1.2.1",
    "eslint-plugin-react": "^3.15.0",
    "eslint-plugin-standard": "^1.3.1",
    "livereactload": "^2.1.1",
    "morgan": "^1.6.1",
    "react-proxy": "^1.1.2",
    "watchify": "^3.7.0"
  },
  "eslintConfig": {
    "rules": {
      "semi": [
        2,
        "always"
      ],
      "space-before-function-paren": [
        2,
        {
          "anonymous": "always",
          "named": "never"
        }
      ],
      "react/prop-types": [
        0
      ]
    },
    "extends": [
      "standard",
      "standard-react"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "env": {
      "development": {
        "plugins": [
          ["react-transform", {
            "transforms": [{
              "transform": "livereactload/babel-transform",
              "imports": ["react"]
            }]
          }]
        ]
      }
    }
  }
}
